<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="HomeActivityTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabTextAppearance">@style/HomeActivityTabTextAppearance</item>
        <item name="tabSelectedTextColor">@android:color/white</item>
        <item name="tabIndicatorColor">@android:color/white</item>
        <item name="tabIndicatorHeight">2dp</item>
    </style>

    <style name="HomeActivityTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/color_tab_text_selected</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="ToolBarTitle">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/title_text_size</item>
    </style>

</resources>
