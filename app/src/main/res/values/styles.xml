<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="HomeActivityTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabTextAppearance">@style/HomeActivityTabTextAppearance</item>
        <item name="tabSelectedTextColor">@android:color/white</item>
        <item name="tabIndicatorColor">@android:color/white</item>
        <item name="tabIndicatorHeight">2dp</item>
    </style>

    <style name="HomeActivityTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/color_tab_text_selected</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="ToolBarTitle">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/title_text_size</item>
    </style>
    
    <style name="TextViewTitle">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="TexViewCardViewAddress">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/color_cardview_text_address</item>
    </style>

    <style name="TexViewCardViewDate" parent="TexViewCardViewAddress">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TexViewCardViewLike" parent="TexViewCardViewAddress">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/color_cardview_text_address</item>
    </style>

    <style name="Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?actionBarSize</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="MainContainer">
        <item name="android:paddingLeft">@dimen/padding_left_main_container</item>
        <item name="android:paddingRight">@dimen/padding_right_main_container</item>
        <item name="android:background">@color/color_background</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="TvTextGray" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color_text_target</item>
        <item name="android:textSize">@dimen/text_size_gray</item>
        <item name="android:layout_marginTop">@dimen/margin_top_text_gray</item>
        <item name="android:layout_marginBottom">@dimen/margin_bot_text_gray</item>
    </style>

    <style name="TvTextBlack" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color_text_date</item>
        <item name="android:textSize">@dimen/text_size_black</item>
        <item name="android:layout_marginTop">@dimen/margin_top_text_black</item>
        <item name="android:layout_marginBottom">@dimen/margin_bot_text_black</item>
    </style>

    <style name="TvTextShape" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/color_text_white</item>
        <item name="android:textSize">@dimen/text_size_shape</item>
        <item name="android:background">@drawable/shape_in_progress</item>
        <item name="android:paddingLeft">@dimen/padding_filter_lf_rt</item>
        <item name="android:paddingRight">@dimen/padding_filter_lf_rt</item>
        <item name="android:paddingTop">@dimen/padding_filter_bot_top</item>
        <item name="android:paddingBottom">@dimen/padding_filter_bot_top</item>
        <item name="android:layout_marginTop">@dimen/margin_top_filter</item>
        <item name="android:layout_marginBottom">@dimen/margin_bot_filter</item>
    </style>

    <style name="TvNameOrder" parent="@android:style/Widget.TextView">
        <item name="android:paddingTop">@dimen/padding_top_tv_order</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color_text_order</item>
        <item name="android:textSize">@dimen/text_name_order</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/color_divider</item>
    </style>
    

</resources>
