<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_menu_height"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/item_menu_drawer_im_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/item_menu_drawer_im_icon_padding_left" />

    <TextView
        android:id="@+id/item_menu_drawer_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/item_menu_drawer_title_padding_left"
        android:text="item"
        android:textColor="@android:color/black"
        android:textSize="@dimen/item_menu_drawer_text_size" />

</LinearLayout>